def shared_pods
  pod 'BigInt', '~> 3.0'
end

target 'TomatoCrypto-iOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  platform :ios, '9.0'

  # Pods for TomatoCrypto-iOS
  shared_pods

  target 'TomatoCrypto-iOSTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

